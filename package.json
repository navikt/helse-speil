{
    "name": "helse-speil",
    "version": "1.0.0",
    "author": "Team BÃ¸mlo",
    "description": "Innsyn i saksbehandling av sykepenger",
    "repository": {
        "type": "git",
        "url": "https://github.com/navikt/helse-speil.git"
    },
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "frontend": "lerna run dev --stream --scope=helse-speil-frontend",
        "backend": "lerna run dev --stream --scope=helse-speil-backend",
        "serve": "lerna run serve --stream",
        "mock": "lerna run mock",
        "build": "lerna run build --stream",
        "test": "lerna run test --stream",
        "test-ci": "lerna run test-ci --stream",
        "clean": "lerna run clean --stream && npx jest --clearCache && rimraf node_modules",
        "generate-graphql": "graphql-codegen --config graphql-codegen.yml",
        "prepare": "husky install",
        "lint": "lerna run lint --stream",
        "prettier": "lerna run prettier --stream"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,json,md}": [
            "prettier --write"
        ],
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --rule react-hooks/exhaustive-deps:off"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/fragment-matcher": "^5.0.0",
        "@graphql-codegen/introspection": "^4.0.0",
        "@graphql-codegen/typed-document-node": "^5.0.1",
        "@graphql-codegen/typescript": "^4.0.1",
        "@graphql-codegen/typescript-operations": "^4.0.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/node": "^20.10.5",
        "@types/uuid": "^9.0.7",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^8.0.3",
        "lerna": "^8.0.1",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "rollup-plugin-visualizer": "^5.11.0",
        "sass": "^1.70.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=14.17.0",
        "npm": ">=6.14.0"
    },
    "dependencies": {
        "remeda": "^2.0.3"
    }
}
