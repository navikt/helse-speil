{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "17.0"
        }
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "overrides": [
        {
            "files": ["backend/**/*.js"],
            "excludedFiles": "*.test.js",
            "env": {
                "node": true,
                "browser": false
            },
            "rules": {
                "no-console": "off"
            }
        },
        {
            "files": ["**/*.test.js", "__mocks__/**/*.js", "jest.config.js"],
            "env": {
                "mocha": true,
                "node": true,
                "jest": true
            },
            "rules": {
                "no-console": "off"
            }
        }
    ],
    "plugins": ["react", "react-hooks", "@typescript-eslint", "react-refresh", "testing-library", "jest-dom"],
    "extends": ["eslint:recommended", "prettier", "plugin:jest-dom/recommended", "plugin:testing-library/dom"],
    "rules": {
        "react/jsx-no-bind": [
            "error",
            {
                "allowArrowFunctions": true,
                "allowBind": false,
                "ignoreRefs": true
            }
        ],
        "react/jsx-curly-brace-presence": ["error", "never"],
        "react/no-did-update-set-state": "error",
        "react/no-unknown-property": "error",
        "react/no-unused-prop-types": "error",
        "react/react-in-jsx-scope": "error",
        "react-refresh/only-export-components": "warn",
        "no-unused-vars": ["off"],
        "indent": "off",
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error",
        "react-hooks/rules-of-hooks": "error",
        "no-undef": "off",
        "no-empty-pattern": "off"
    }
}
